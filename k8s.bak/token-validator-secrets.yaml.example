apiVersion: v1
kind: Secret
metadata:
  name: token-validator-secrets
  namespace: mariadb-auth-test
type: Opaque
data:
  # Example: External cluster CA certificate (base64 encoded)
  # prod-us-ca.crt: LS0tLS1CRUdJTi...

  # Example: External cluster ServiceAccount token (base64 encoded)
  # prod-us-token: ZXlKaGJHY2lPaUpT...

# To create this secret from files:
# kubectl create secret generic token-validator-secrets \
#   --from-file=prod-us-ca.crt=./prod-cluster-ca.crt \
#   --from-file=prod-us-token=./prod-cluster-token \
#   --namespace=mariadb-auth-test
